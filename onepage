                                   <script type="text/javascript">
                                   function sendJunghoMail(mail_to, mail_subject, mail_text_html){
                                       var data = "mail_to="+mail_to+"&mail_subject="+mail_subject+"&mail_text_html="+mail_text_html;

                                       $.ajax({
                                         url:'/func/sendmail',
                                         dataType:'json',
                                         type:'post',
                                         data: data,
                                         success:function(data){
                                           console.log(data);
                                         }
                                       })
                                       }

                                     $(document).on('click', '#send_mail', function(){
                                       if($('#name').val().length < 1 ){
                                         alert('이름을 입력해 주세요');
                                         return;
                                       }else if($('#contact_num').val().length < 1){
                                         alert('연락처를 입력해 주세요');
                                         return;
                                       }else if($('#email').val().length < 1){
                                         alert('이메일주소를 입력해 주세요');
                                         return;
                                       }else if(!$('#agree_check').is(':checked')){
                                         alert('개인정보 수집 동의에 채크해주세요.');
                                         return;
                                       }
                                       var htmlcode = '<table class="table">'+
                                                 '<thead><th class="text-center" colspan="2"><h5>개인정보</h5></th></thead>'+
                                                 '<tbody>'+
                                                   '<tr><th>이름</th><td>'+ $('#name').val() +'</td></tr>'+
                                                   '<tr><th>연락처</th><td>'+ $('#contact_num').val() +'</td></tr>'+
                                                   '<tr><th>이메일</th><td>'+ $('#email').val() +'</td></tr>'+
                                                 '</tbody>'+
                                                 '<thead><th class="text-center" colspan="2"><h5>구매정보</h5></th></thead>'+
                                                 '<tbody>'+
                                                   '<tr><th>거주지역</th><td>'+ $('#residence').text() +'</td></tr>'+
                                                   '<tr><th>구매형태</th><td>'+ $('#purchase_type').text() +'</td></tr>'+
                                                   '<tr><th>할부시 선수금</th><td>'+ $('#price').val() +'</td></tr>'+
                                                   '<tr><th>선호차종(희망차종)</th><td>'+ $('#hope_car').val() +'</td></tr>'+
                                                   '<tr><th>보증금</th><td>'+ $('#deposit').text() +'</td></tr>'+
                                                   '<tr><th>이용개월수</th><td>'+ $('#use_period').text() +'</td></tr>'+
                                                   '<tr><th>기타문의</th><td>'+ $('#etc_text').val() +'</td></tr>'+
                                                 '</tbody>'+
                                               '</table>';
                                      sendJunghoMail('jhyoum98@gmail.com', $('#name').val()+' 고객님 신청서입니다.', htmlcode);
                                       alert('메일이 전송되었습니다. 감사합니다.');
                                       location.reload();
                                     });

                                     $(document).on("click", ".dropdown-item", function(){
                                       var selected_item = $(this).text();
                                       $(this).parents(".dropdown-menu").siblings().text(selected_item);
                                     });
                                   </script>
